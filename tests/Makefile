# Name of the executable
NAME = minitests

# Compilation flags
CFLAGS = -Wall -Wextra -Werror -g
INCLUDES = -I ../includes/ -I . -I $(LIBFT_PATH)/ -I $(FTPRINTF_PATH)/ -I $(UNITY_PATH)/ 
LINKING = -L$(FTPRINTF_PATH) -lftprintf -L$(LIBFT_PATH) -lft -L ../../../../usr/include -lreadline -L$(UNITY_PATH) -lunity

UNITY_PATH = ./unity
# Libft
LIBFT_PATH	=	../libs/libft
LIBFT		=	$(LIBFT_PATH)/libft.a
FTPRINTF_PATH	= ../libs/ft_printf
FTPRINTF		=	$(FTPRINTF_PATH)/libftprintf.a

# push_swap
SRC_PATH = ../src/
SRC = 	$(SRC_PATH)env.c \
		$(SRC_PATH)token.c \
		$(SRC_PATH)token_utils.c \
		$(SRC_PATH)main_utils.c

#		
#		$(SRC_PATH)main.c
#		./src/token.c
#		./src/lexer/.c \
#		./src/parser/.c \
#		./src/executor/.c \
#		./src/utils/.c \

TESTS_PATH = ./
TESTS = tests.c

# Objects
OBJ_PATH = .build/
OBJ = $(addprefix $(OBJ_PATH), $(notdir $(SRC:.c=.o)))
TESTS_OBJ = $(addprefix $(OBJ_PATH), $(notdir $(TESTS:.c=.o)))
# OBJ_PATH_BONUS = ./build_bonus/
# OBJ_BONUS = $(addprefix $(OBJ_PATH_BONUS), $(notdir $(SRC_BONUS:.c=.o)))

# Color codes of output on terminal
GREEN = \e[1;32m
WHITE = \033[1;37m
CYAN= \033[0;36m
END = \033[0m

# Default target to compile the mandatory part
all: $(NAME)

# Target to build the mandatory part
$(NAME): $(TESTS_OBJ) $(OBJ) $(LIBFT) $(FTPRINTF)
# 	@cp $(LIBFT) $(NAME)
# 	$(CC) $(OBJ) $(LIBFT) -L$(PATH_LIBFT) -o $(NAME)
	@$(CC) $(CFLAGS) $(OBJ) $(TESTS_OBJ) -o $@ $(LINKING) 
#	@$(CC) $(CFLAGS) $(OBJ) -o $@ -L$(FTPRINTF_PATH) -lftprintf -L$(LIBFT_PATH) -lft
	@echo "$(GREEN)--------------------------------------------------$(END)"
	@echo "$(GREEN)[$(CYAN)Tests$(GREEN)] compiled! üêöüåä$(END)"
	@echo "$(GREEN)--------------------------------------------------$(END)"

run: all
	@echo "Running the program..."
	./minishell

# Builds dependencies
$(LIBFT):
	@make -C $(LIBFT_PATH)
$(FTPRINTF):
	@make -C $(FTPRINTF_PATH)

# Builds mandatory object files
$(OBJ_PATH)%.o: $(SRC_PATH)%.c
	@mkdir -p $(OBJ_PATH)
	$(CC) -c $(CFLAGS) $< -o $@ $(INCLUDES)

$(OBJ_PATH)%.o: $(TESTS_PATH)%.c
	@mkdir -p $(OBJ_PATH)
	$(CC) -c $(CFLAGS) $< -o $@ $(INCLUDES)

# Cleans object files and dependencies
clean:
	@rm -f $(OBJ)
	@rm -rf $(OBJ_PATH)
	@make -C $(LIBFT_PATH) clean
	@make -C $(FTPRINTF_PATH) clean
	@echo "$(WHITE)-----------------------------------$(END)"
	@echo "$(WHITE)    Object files were cleaned!$(END)"
	@echo "$(WHITE)-----------------------------------$(END)"

# Cleans the executable file and pre-compiled header
fclean: clean
	@echo "$(WHITE)-----------------------------------$(END)"
	@echo "$(WHITE)        Cleaning all... üßπ$(END)"
	@echo "$(WHITE)-----------------------------------$(END)"
	@rm -f $(NAME)
	@make -C $(LIBFT_PATH) fclean
	@make -C $(FTPRINTF_PATH) fclean
	@echo "$(WHITE)-----------------------------------$(END)"
	@echo "$(WHITE)    ‚ú® Cleaning complete! ‚ú®$(END)"
	@echo "$(WHITE)-----------------------------------$(END)"

# Cleans everything generated by the Makefile and rebuild it all
re: fclean all

# Phony targets
.PHONY: all bonus clean fclean re run
