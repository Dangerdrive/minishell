#!/bin/bash

# Create a new file that will contain the concatenated output
output_file="all_in_one.c"
echo "// Combined C source files" > "$output_file"

# List of directories containing C files, adjust as necessary
directories=("src/builtins" "src/execution" "src/expand" "src/lexer" "src/main" "src/parse" "src/redirections" "src/signals" "src/token")

# Loop through directories and append C files to the output file
for dir in "${directories[@]}"; do
    for file in "$dir"/*.c; do
        echo "// File: $file" >> "$output_file"
        cat "$file" >> "$output_file"
        echo "" >> "$output_file" # Add a newline for separation
    done
done

echo "All files have been concatenated into $output_file."
